<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" >

    <top>
        <ToolBar>
            <items>
                <Region styleClass="spacer" />
                <HBox styleClass="segmented-button-bar">
                    <Button text="File" styleClass="first" />
                    <Button text="Administrator" />
                    <Button text="Search" />
                    <Button text="Line" />
                    <Button text="Process" styleClass="last" />
                </HBox>
            </items>
        </ToolBar>
    </top>
   <center>
      <TableView fx:id="tableViewPacijenti" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colPacijentId" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="colPacijentIme" prefWidth="100.0" text="Ime" />
          <TableColumn fx:id="colPacijentPrezime" prefWidth="90.0" text="Prezime" />
          <TableColumn fx:id="colPacijentDatumRodjenja" prefWidth="185.0" text="Datum rodjenja" />
        </columns>
      </TableView>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER"  >
         <children>
            <Button fx:id="btnDodajPacijenta" mnemonicParsing="false" prefWidth="Infinity"  text="Dodaj pacijenta" />
            <Button fx:id="btnDodajBolest" mnemonicParsing="false" prefWidth="Infinity" text="Dodaj bolest" />
            <Button fx:id="btnIzmijeniPacijenta" mnemonicParsing="false" prefWidth="Infinity"  text="Izmijeni pacijenta" />
            <Button fx:id="btnObrisiPacijenta" mnemonicParsing="false" prefWidth="Infinity"  text="ObriÅ¡i pacijenta" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
